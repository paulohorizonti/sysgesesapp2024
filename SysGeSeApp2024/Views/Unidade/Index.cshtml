@using SysGeSeApp2024.Models.ViewModel
@using SysGeSeApp2024.Models.Enums
@model UnidadeListViewModel
@{
    ViewBag.Title = "Unidade";
}


<form asp-controller="Unidade" asp-action="Index" class="row p1">
 <div class="card p-0">
        <div class="card-header p-2">
            <span class="prn-font-card-header fw-semibold">Cadastro de Unidades</span>
            <a asp-controller="Unidades" asp-action="Incluir" class="float-end  btn btn-outline-primary btn-sm"><i class="fa-duotone fa-circle-plus"></i> Novo</a>
        </div>
        <div class="card-body p-2">
            <div class="row">
                @await Html.PartialAsync("~/Views/Acoes/Mensagens.cshtml")
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <label asp-for="Nome" class="form-label form-label-sm">Nome</label>
                    <input asp-for="Nome" class="form-control form-control-sm" placeholder="Digite o NOME da unidade" data-val="True" onkeyup="maiuscula(this);" />
                </div>
                <div class="col-lg-4">
                    <label asp-for="Cidade" class="form-label form-label-sm">Cidade</label>
                    <input asp-for="Cidade" class="form-control form-control-sm" placeholder="Digite a CIDADE da unidade" data-val="True" onkeyup="maiuscula(this);" />
                </div>
                <div class="col-lg-2">
                    <label asp-for="Estado" class="form-label form-label-sm">Estado</label>
                    <select id="uf" asp-for="Estado" asp-items="@(new SelectList(Model.Estados, "Uf", "Descricao"))" class="form-control form-control-sm form-select">
                          <option value="">Escolha o Estado</option>
                    </select>

                </div>
                <div class="col-lg-2">
                    <label asp-for="Status" class="form-label form-label-sm">Status</label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-select form-control-sm"></select>
                </div>
            </div>
        </div>
 </div>



</form>