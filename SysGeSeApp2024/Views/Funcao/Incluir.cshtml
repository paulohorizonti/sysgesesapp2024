@using SysGeSeApp2024.Models.ViewModel
@using SysGeSeApp2024.Models.Enums
@model FuncaoViewModel
@{
    ViewBag.Title = "Incluir";
}

<form asp-controller="Funcao" asp-action="Incluir" class="row p1">
    <div class="card p-0">
        <div class="card-header">
            <span class="prn-font-card-header">Cadastro de Função</span>
           
        </div>

        <div class="card-body">
           

            <div class="row">
                <div class="col-lg-10">
                    <label asp-for="Descricao" class="form-label">Perfil</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Digite a DESCRIÇÃO" data-val="True" onkeyup="maiuscula(this);" />
                </div>
                <div class="col-lg-2">
                   

                    <select asp-for="Func" asp-items="@(new SelectList(Model.ListaFunc, "Id", "Descricao"))" class="form-control form-control-sm form-select">
                        <option value="">Escolha o Perfil</option>
                    </select>

                </div>
            </div>
            <div class="row mt-2">
                <div class="col-lg-12">

                    <button type="submit" class="float-end btn btn-outline-success mr-1 btn-sm"><i class="fa-duotone fa-magnifying-glass"></i>&nbsp; Pesquisar</button>
                    <button class="float-end btn btn-outline-secondary mr-1 btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-duotone fa-download"></i>&nbsp;Exportar</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="fa-duotone fa-file-excel"></i>Excel</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-duotone fa-file-pdf"></i>Pdf</a></li>

                    </ul>

                    <button type="submit" class="float-end btn mr-1 btn-outline-warning  btn-sm"><i class="fa-duotone fa-broom"></i>&nbsp;Limpar</button>
                </div>
            </div>

        </div>

    </div>

</form>

