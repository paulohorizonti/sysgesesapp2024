<table class="table  table-hover table-striped  table-sm table-responsive-sm">
    <thead class="prn-font-table-header">

        <tr>
            <th class="text-center fw-semibold  prn-border-columns prn-border-columns-theader-left ">Ativo?</th>
            <th class="text-center fw-semibold prn-border-columns">Id</th>
            <th class="text-center fw-semibold prn-border-columns">Função</th>
            <th class="text-center fw-semibold prn-border-columns prn-border-columns-left prn-border-columns-theader">Ação</th>
           
                     

        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model)
         {
            <tr>
                @if (item.Status == 1)
                {
                    <td style="width:5%;" class=" prn-border-columns prn-border-columns-left text-center">  <a asp-controller="Funcao" asp-action="AtivarDesativar"  asp-route-id="@item.Id"> <i data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="@((item.Status == 1) ? "ATIVO": "BLOQUEADO")" class="fs-5 text-primary fa-duotone fa-face-laugh-wink"></i> </a></td>

                }
                else
                {
                    <td style="width:5%;" class=" prn-border-columns prn-border-columns-left  text-center"> <a asp-controller="Funcao" asp-action="AtivarDesativar"  asp-route-id="@item.Id"> <i data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="@((item.Status == 1) ? "ATIVO" : "BLOQUEADO")"  class="fs-5 text-danger fa-duotone fa-face-sad-tear"></i></a></td>
                }
                <th class="prn-border-columns text-center" scope="row" style="width:5%;">@item.Id</th>
                <td class="prn-border-columns text-rigth">@item.Descricao</td>
               
                <td class="text-center prn-border-columns " style="width:10%;">
                    <a asp-controller="Funcao" asp-action="Editar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Alterar Registro" class="btn btn-outline-primary  border-0" asp-route-id="@item.Id"><i class="fs-5 fa-duotone fa-pen-to-square"></i></a>
                    <a asp-controller="Funcao" asp-action="Detalhar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Detalhar Registro" class="btn btn-outline-secondary border-0" asp-route-id="@item.Id"><i class="fs-5 fa-duotone fa-circle-info"></i></a>
                    <a asp-controller="Funcao" asp-action="Excluir" data-bs-toggle="tooltip"  data-bs-placement="top"  data-bs-title="Excluir Registro" class="btn btn-outline-danger border-0"    asp-route-id="@item.Id"><i class="fs-5 fa-duotone fa-trash"></i></a>
                </td>
               
            </tr>
        }
    </tbody>

</table>