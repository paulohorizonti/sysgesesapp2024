@using SysGeSeApp2024.Models.ViewModel
@using SysGeSeApp2024.Models.Enums
@model FuncaoListViewModel
@{
    ViewBag.Title = "Funcao";
}

<form asp-controller="Funcao" asp-action="Index" class="row p1">
    <div class="card p-0">
        <div class="card-header">
            <span class="prn-font-card-header">Cadastro de Função</span>
            <a asp-controller="Funcao" asp-action="Incluir" class="float-end  btn btn-outline-primary btn-sm"><i class="fa-duotone fa-circle-plus"></i> Novo</a>
        </div>

        <div class="card-body p-2">
            <div class="row">
                @await Html.PartialAsync("~/Views/Acoes/Mensagens.cshtml")
            </div>
           
            <div class="row">
                <div class="col-lg-10">
                    <label asp-for="Descricao" class="form-label">Perfil</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Digite a DESCRIÇÃO" data-val="True" onkeyup="maiuscula(this);" />
                </div>
                <div class="col-lg-2">
                                    
                  
                    <div class="form-group">
                        <label asp-for="Status">Status</label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-select"></select>

                    </div>
                    
                   

                </div>
            </div>
            <div class="row mt-2">
                <div class="col-lg-12">
                   
                    <button type="submit" class="float-end btn btn-outline-success mr-1 btn-sm"><i class="fa-duotone fa-magnifying-glass"></i>&nbsp; Pesquisar</button>
                    <button class="float-end btn btn-outline-secondary mr-1 btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-duotone fa-download"></i>&nbsp;Exportar</button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#"><i class="fa-duotone fa-file-excel"></i>Excel</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fa-duotone fa-file-pdf"></i>Pdf</a></li>

                    </ul>

                    <button onclick="limparInputs()" class="float-end btn mr-1 btn-outline-warning  btn-sm"><i class="fa-duotone fa-broom"></i>&nbsp;Limpar</button>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12 table-responsive">
                    <partial name="_TabelaFuncaoPrincipal" model="Model.Funcoes" />
                </div>
            </div>

        </div>

    </div>

</form>



